<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <h1>Welcome to Yelpcamp</h1>
        <p> View our handpicked campground from all over the world </p>
        <p>
            <a class="btn btn-primary" href ="/campground/new">Add new Campground</a>
        </p>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular Campground<h3>
        </div>
    </div>

    <div class="row" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <img class="img-thumbnail" src="<%= campground.image %>"/>
            <figure class="figure">
                <h4 class="figure-caption"><%= campground.name %></h4>
                <p>
                    <a href="/campground/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </figure>

        </div>
    <% }) %>
    </div>

</div>

<% include ../partials/footer %>