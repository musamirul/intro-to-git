<% include ../partials/header %>
<h1 style="text-align: center">Edit Comment</h1>

<div class="container">
    <div class="row">

        <div style="width:30%; margin:25px auto">
            <form action="/campground/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <button class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/campground">Go Back</a>
        </div>

    </div>
</div>


<% include ../partials/footer %>